    <!-- confirmation for block/unblock user -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        async function confirmBlock(event) {
            event.preventDefault();
            
            //get the button text
            const actionButton = event.target.querySelector('.blockUnblock');
            const action = actionButton.textContent.trim().toLowerCase();
            
            //set confirmation message based on the status
            const confirmationMessage = action === 'block' ? 'Are you sure you want to block this user?' : 'Are you sure you want to unblock this user?';
            
            const result = await Swal.fire({
                title: 'Confirmation',
                text: confirmationMessage,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: action === 'block' ? 'Yes, Block user!' : 'Yes, Unblock user!'
            });

            if (result.isConfirmed) {
                event.target.submit();
            } else {
                Swal.fire('Cancelled');
            }
        }
    </script>
    <!-- /confirmation for block/unblock user -->


