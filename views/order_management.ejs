<!-- script for sidebar menu activation -->
  <script>
      // get the current URL
      var currentUrl = window.location.href;
      // select all links inside the sidebar
      var sidebarLinks = document.querySelectorAll('.admin-links');

      sidebarLinks.forEach(function(link) {
          if (link.href === currentUrl) {
              link.parentElement.classList.add('active');
          }
      });
  </script>
<!-- /script for sidebar menu activation -->




<!-- js to hide success messages after 5 seconds-->
  <script>
      // update product success message
      setTimeout(function () {
          var updateproductSuccessMessage = document.getElementById('updateproductSuccessMessage');
          var successBox = document.getElementById('success-box');

          if (updateproductSuccessMessage && successBox) {
          updateproductSuccessMessage.style.display = 'none';
          successBox.style.display = 'none';

          }
      }, 5000);
        // end of update product success message

      //delete product success message
      setTimeout(function () {
          var deleteproductSuccessMessage = document.getElementById('deleteproductSuccessMessage');
          var successBox = document.getElementById('success-box');

          if (deleteproductSuccessMessage && successBox) {
          deleteproductSuccessMessage.style.display = 'none';
          successBox.style.display = 'none';

          }
      }, 5000);
      // end of delete product success message
  </script>
  <!-- /js to hide success messages after 5 seconds-->
    
  


