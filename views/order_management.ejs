                      <section id="content">
                        <main class="d-flex gap-3">
                            <div class="table-data-section">
                      

                              <div class="head-part">
                                <h1>Order Management</h1>
                              </div>

                              

                                <table id="dataTable" class="dataTypeTables_wrapper" style="width: 73.5vw; min-height: 30vh;">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Image</th>
                                            <th>Product details</th>
                                            <th>User details</th>
                                            <th>Order Details</th>
                                            <th>order status</th>
                                            <!-- <th>change status</th> -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let currentIndex = 1; %>
                                            <% for (const order of OrderData) { %>
                                              <% console.log(order); %> <!-- Debugging line -->
                                              <% for (const item of order.orderItems) { %>
                                                <% for (const address of order.selectedAddress) { %>
                                                  


                                                    <tr>
                                                        <td>
                                                          <p><%= currentIndex++ %></p>
                                                        </td>

                                                        <td>
                                                          <div class="productImg">
                                                            <img src="/uploads<%= item.images[0] %>" alt="">
                                                          </div>
                                                        </td>

                                                        <td>
                                                          <div style="line-height: 7px;">
                                                            <p class="text-capitalize"> <%= item.pName %> </p>
                                                            <p class="qty ">Qty: <%= item.userAddedQty %></p>
                                                            <p class="m-0 p-0 ">â‚¹<%= item.lastPrice %>(per/ item) </p>
                                                          </div>
                                                        </td>

                                                        <td>
                                                          <div style=" margin-top: 60px;">
                                                              <p style="line-height: 4px;" class="userEmail"><%= order.email %></p>
                                                              <p style="line-height: 4px;" class="text-capitalize"><%= address.mobile %></p>
                                                              <p  class="userAddress" style="text-overflow: ellipsis;text-wrap: nowrap;"><%= address.address %></p>
                                                          </div>
                                                        </td>
                                                      

                                                        <td>
                                                          <div style=" margin-top: 30px;">
                                                            <p  style="line-height: 4px;" class="order-id"><%= order._id %></p>
                                                            <p style="line-height: 2px;" class="mb-1 text-capitalize">Order Status: <%= item.orderStatus %></p>
                                                            <p class="mb-1 p-0" style="width: 190px;overflow: hidden;text-overflow: ellipsis;text-wrap: nowrap;">
                                                                  Payment Methode: <%= order.paymentMethod %></p>
                                                          </div>
                                                        </td>
                                                        
                                                        <!-- order status dropdown -->
                                                        <td>
                                                          <% if(item.orderStatus === 'cancelled'){ %>
                                                              <p>Order Cancelled</p>
                                                          <% } else if(item.orderStatus === 'delivered'){ %>
                                                                  <p>Delivered</p>
                                                          <% } else if(item.orderStatus === 'shipped'){ %>
                                                            <form action="/admin-productStatus" class="changeStatus" method="post">
                                                              <input type="hidden" value="<%= order._id %>" name="orderId">
                                                              <input type="hidden" value="<%= item._id %>" name="productId">
                                                              <select style="border: none; background-color: rgb(228, 228, 228); border-radius: 5px; text-transform: capitalize;" name="orderStatus" id="filler" class="bg-white border-1 border-black">
                                                                  <option value="shipped" <%= item.orderStatus %>>Shipped</option>
                                                                  <option value="delivered" <%= item.orderStatus %>>Delivered</option>
                                                                  <option value="cancelled" <%= item.orderStatus %>>Cancel</option>
                                                              </select>

                                                              <button class="filler bg-black text-white cText">Change Status</button>
                                                          </form>
                                                          <% } else if(item.orderStatus === 'ordered'){ %>
                                                              <form action="/admin-productStatus" class="changeStatus" method="post">
                                                                <input type="hidden" value="<%= order._id %>" name="orderId">
                                                                <input type="hidden" value="<%= item._id %>" name="productId">
                                                                <select style="border: none; background-color: rgb(228, 228, 228); border-radius: 5px; text-transform: capitalize;" name="orderStatus" id="filler" class="bg-white border-1 border-black">
                                                                  <option value="ordered" <%= item.orderStatus %>>Ordered</option>
                                                                    <option value="shipped" <%= item.orderStatus %>>Shipped</option>
                                                                    <option value="delivered" <%= item.orderStatus %>>Delivered</option>
                                                                    <option value="cancelled" <%= item.orderStatus %>>Cancel</option>
                                                                </select>

                                                                <button class="filler bg-black text-white cText">Change Status</button>
                                                            </form>
                                                          <% } else if(item.orderStatus === 'return requested'){ %>
                                                              <form action="/admin-productStatus" class="changeStatus" method="post">
                                                                  <input type="hidden" value="<%= order._id %>" name="orderId">
                                                                  <input type="hidden" value="<%= item._id %>" name="productId">
                                                                  <select style="border: none; background-color: rgb(228, 228, 228); border-radius: 5px; text-transform: capitalize;" name="orderStatus" id="filler" class="bg-white border-1 border-black">
                                                                      <option value="return requested" <%= item.orderStatus %>>Return Requested</option>
                                                                      <option value="pickup" <%= item.orderStatus %>>Pickup</option>
                                                                  </select>

                                                                  <button class="filler bg-black text-white cText">Change Status</button>
                                                              </form>
                                                          <% } else if(item.orderStatus === 'pickup'){ %>
                                                                  <form action="/admin-productStatus" class="changeStatus" method="post">
                                                                  <input type="hidden" value="<%= order._id %>" name="orderId">
                                                                  <input type="hidden" value="<%= item._id %>" name="productId">
                                                                  <select style="border: none; background-color: rgb(228, 228, 228); border-radius: 5px; text-transform: capitalize;" name="orderStatus" id="filler" class="bg-white border-1 border-black">
                                                                      <option value="pickup" <%= item.orderStatus %>>Pickup</option>
                                                                      <option value="picked" <%= item.orderStatus %>>Picked</option>
                                                                      <option value="refunded" <%= item.orderStatus %>>Refunded</option>
                                                                  </select>

                                                                  <button class="filler bg-black text-white cText">Change Status</button>
                                                              </form>
                                                          <% } else if(item.orderStatus === 'picked'){ %>
                                                              <p>Picked</p>
                                                          <% } else if(item.orderStatus === 'refunded'){ %>
                                                            <p>Refunded</p>
                                                          <% } else { %>
                                                              <form action="/admin-productStatus" class="changeStatus" method="post">
                                                                  <input type="hidden" value="<%= order._id %>" name="orderId">
                                                                  <input type="hidden" value="<%= item._id %>" name="productId">
                                                                  <select style="border: none; background-color: rgb(228, 228, 228); border-radius: 5px; text-transform: capitalize;" name="orderStatus" id="filler" class="bg-white border-1 border-black">
                                                                      <option value="<%= item.orderStatus %>"><%= item.orderStatus %></option>
                                                                      <option value="ordered" <%= item.orderStatus %>>Ordered</option>
                                                                      <option value="shipped" <%= item.orderStatus %>>Shipped</option>
                                                                      <option value="delivered" <%= item.orderStatus %>>Delivered</option>
                                                                      <option value="cancelled" <%= item.orderStatus %>>Cancel</option>
                                                                  </select>

                                                                  <button class="filler bg-black text-white cText">Change Status</button>
                                                              </form>
                                                          <% } %>
                                                    
                                                      </td>

                                                      <!-- <td>  
                                                          <button class="filler bg-black text-white cText">Change Status</button>
                                                      </td> -->
                                                        
                                                    </tr>
                                                    
                                                <% } %>
                                              <% } %>
                                            <% } %>
                                    </tbody>
                                </table>
                                
                            </div>
                          </main>
