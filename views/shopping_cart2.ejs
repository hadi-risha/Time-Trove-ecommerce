                    <% if(cartProductDetails.length > 0){ %>
                    <p class="cart-head">Shopping Cart <span>(<%= cartProductDetails.length %>)</span></p>
                    <div class="complete-section">

                        <!-- left side -->
                        <div class="left-Side">
                            
                            <% for(let i=0; i<cartProductDetails.length; i++) { %>
                                <% if (cartProductDetails.length !== 0 ) { %>
                                    <div class="cart-box">
