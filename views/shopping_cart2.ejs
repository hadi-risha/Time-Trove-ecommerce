                                    </div>
                                    
                                    
                                    <div style="text-align: center;">
                                            <% let BtnOfRemoveProduct = true; %>
                                            <% let BtnOfOutOfStock = true; %>
                                            <% for(let i=0; i<cartProductDetails.length; i++) { %>
