                                            <!-- product remove icon -->
                                            <div class="delete">
                                                <form action="/remove-item" method="post" onsubmit="return confirmDelete(event);">
                                                    <button>
                                                        <input type="hidden" name="id" value="<%= cartProductDetails[i].pDetails[0]._id %>">
