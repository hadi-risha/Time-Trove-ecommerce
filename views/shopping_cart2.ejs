                                                    <% BtnOfOutOfStock = false; %>
                                                <% } else if (cartProductDetails[i].userAddedQuantity > cartProductDetails[i].pDetails[0].quantity) { %> 
                                                    <% BtnOfRemoveProduct = false; %>
                                                <% }%>
