                state.innerHTML = "Invalid state name. Please use only letters and spaces.";
                return false;
            }
    
            // Validate address
            if (addressInput.value.trim() === '') {
                const address = document.getElementById('address');
                address.innerHTML = "Address is required.";
                return false;
            }
    
            // Validate district
            if (districtInput.value.trim() === '') {
                const district = document.getElementById('district');
                district.innerHTML = "District is required.";
                return false;
            }
            if (!/^[A-Za-z\s]+$/.test(districtInput.value)) {
                const district = document.getElementById('district');
                district.innerHTML = "Invalid district name. Please use only letters and spaces.";
                return false;
