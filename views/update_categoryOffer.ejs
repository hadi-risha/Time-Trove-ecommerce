    <!-- update categoryOffer using fetch -->
    <script>
        document.getElementById('updateCategoryOfferForm').addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/update-categoryOffer', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const result = await response.json();

                //check if the update was successful
                if (result.success) {
                    window.location.href = '/offer-management';
                    return;
                } else if(result.url) {
                    //handle errors
                    location.href = result.url;
                    return;
                }
                console.error(result);
            } catch (error) {
                console.error('There was a problem with your fetch operation:', error);
            }
            });
    </script>
    <!-- /update categoryOffer using fetch -->



    <!-- update-categoryOffer form validation -->
    <script>
        function validateForm() { 
            // Get form elements
            const categoryInput = document.querySelector('input[name="category"]');
            const discountInput = document.querySelector('input[name="discount"]');
            const expDateInput = document.querySelector('input[name="expDate"]');
    
            // Validate coupon code
            const trimmedCategoryInput = categoryInput.value.trim();
            if (trimmedCategoryInput.length < 2) {
                document.getElementById('cpncode').innerHTML = "Select a category";
                return false;
            }

            // Validate discount
            const trimmedDiscountInput = discountInput.value.trim();
            if (!/^(?:\d*\.)?\d+$/.test(trimmedDiscountInput)) {
                document.getElementById('discountoff').innerHTML = "Enter non-negative discount";
                return false;
            }

            if (trimmedDiscountInput < 1 || trimmedDiscountInput > 99) {
                document.getElementById('discountoff').innerHTML = "Discount percentage should be between 1 and 99";
                return false;
            }
            if (trimmedDiscountInput > 100) {
                document.getElementById('discountoff').innerHTML = "Discount percentage cannot exceed 100";
                return false;
            }
            if (!/\d{1,}/.test(trimmedDiscountInput)) {
                document.getElementById('discountoff').innerHTML = "Field required";
                return false;
            }

            
            // If all validations pass, allow the form to submit
            return true;
        }
    
        // Attach the validateForm function to the form's onsubmit event
        const form = document.querySelector('form[action="/add-product"]');
        if (form) {
            form.onsubmit = validateForm;
        }
    </script>    
